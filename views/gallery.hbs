
<h1 class="gallery-title">Gallery</h1>
<div class="gallery">
    <dialog class="animal-dialog">
        <h4></h4>
        <img alt="" src="">
        <p></p>
    </dialog>
    <script>
        let divisionCollection, division, dialog;
    </script>
    {{#each images}}
<!--        <div class="gallery-item" name="{{this}}">-->
        <div class="gallery-item">
            <img src="/images/{{this}}.jpg" alt="{{this}}">
            <div class="image-label">{{this}}</div>
        </div>
        <script>
            divisionCollection = document.getElementsByClassName("gallery-item");
            division = divisionCollection[divisionCollection.length - 1];
            console.log(division);
            dialog = document.querySelector(".animal-dialog")
            division.addEventListener("click", () => {
                console.log("hi");
                dialog.querySelector("h4").innerHTML = "{{this}}";
                dialog.querySelector("img").src = "/images/{{this}}.jpg"
                dialog.querySelector("img").alt = "{{this}}"
                dialog.showModal();
            });

        </script>
    {{/each}}
</div>