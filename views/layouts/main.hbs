                </dialog>
                <script type="text/javascript">
                    const dialog = document.getElementById("accessibility-dialog");
                    document.getElementById("accessibility").addEventListener("click", () => {dialog.showModal();});
                    document.getElementById("close-accessibility").addEventListener("click", () => {dialog.close();});
                </script>
            </div>

            <div class="box" id="footer-epsilon">
                <h3>Location</h3>
